<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <resource-bundle>
            <base-name>com.ivo.web.nls.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    
    
    <!-- ============ INDEX, OTHERS =================== -->
    <navigation-rule>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>error_page</from-outcome>
            <to-view-id>/faces/errors/error.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    
    
    <!-- ============ SIMPLEX =================== -->
    <navigation-rule>
        <navigation-case>
            <from-outcome>simplex</from-outcome>
            <to-view-id>pages/simplex/simplex.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>step2</from-outcome>
            <to-view-id>pages/simplex/StepTwoSetData.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>step3</from-outcome>
            <to-view-id>pages/simplex/StepThirdResult.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    
    <!-- ============ GENETIC =================== -->
    <navigation-rule>
        <navigation-case>
            <from-outcome>genetic</from-outcome>
            <to-view-id>pages/genetic/genetic.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>step2_genetic</from-outcome>
            <to-view-id>pages/genetic/StepTwoSetData.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>step3_genetic</from-outcome>
            <to-view-id>pages/genetic/StepThirdSetParamsGenetic.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>step4_genetic</from-outcome>
            <to-view-id>pages/genetic/StepFourthResult.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    
    <!-- ============ COMMON =================== -->
    <navigation-rule>
        <navigation-case>
            <from-outcome>common_analisys</from-outcome>
            <to-view-id>pages/common/SolutionProblemByTask.xhtml</to-view-id>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    
</faces-config>
